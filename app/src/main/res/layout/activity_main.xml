<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/activity_main"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingBottom="20dp"
android:paddingLeft="20dp"
android:paddingRight="20dp"
android:paddingTop="40dp"
    android:background="#c2f3e2"
tools:context="com.example.vibhore.subtitulo.MainActivity">


<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/button"
    android:onClick="login"
    android:layout_centerVertical="true"
    android:layout_centerHorizontal="true"
    android:text="Log In" />

<EditText
    android:id="@+id/edit_email"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:inputType="text"
    android:ems="10"
    android:hint="Enter username"
    android:layout_above="@+id/edit_password"
    android:layout_centerHorizontal="true"
    android:layout_marginBottom="14dp" />


<EditText
    android:id="@+id/edit_password"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:inputType="textPassword"
    android:ems="10"
    android:layout_above="@+id/button"
    android:layout_alignRight="@+id/edit_email"
    android:layout_alignEnd="@+id/edit_email"
    android:layout_marginBottom="21dp"
    android:hint="Enter Password" />


<TextView
    android:text="Need an acoount? Sign Up"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="26dp"
    android:onClick="signup"
    android:textColor="@color/colorAccent"
    android:id="@+id/button8"
    android:layout_below="@+id/button"
    android:layout_centerHorizontal="true" />
</RelativeLayout>
